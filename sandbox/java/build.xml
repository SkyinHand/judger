<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project
    name="sandbox"
    default="compile">

	<property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.6"/>
    <property name="source" value="1.6"/>

    <!-- ANT环境变量 -->

    <property environment="env" />
    <!-- 应用名称 -->

    <property
        name="appName"
        value="${ant.project.name}" />

    <!-- 初始化工作 -->

    <target name="init" >

        <echo>
            初始化工作
        </echo>

        <delete dir="bin" />

        <mkdir dir="bin" />

    </target>

    <!-- 将工程中的java源文件编译成class文件 -->

    <target
        name="compile"
        depends="init" >

        <echo>
			将工程中的java源文件编译成class文件...
        </echo>

        <javac source="${source}" target="${target}" encoding="utf-8" srcdir="src" destdir="bin" includeantruntime="false">

            <!-- <classpath refid="classpath"/> -->

        </javac>
    </target>

</project>